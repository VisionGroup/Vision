<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MainActivityView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.yp2012g4.blindroid.customUI.TalkingImageButton
            android:id="@+id/sos_button"
            android:layout_width="0dip"
            android:layout_height="111dip"
            android:layout_weight="1"
            android:background="@color/BLACK"
            android:contentDescription="@string/sos_button"
            android:scaleType="fitCenter"
            android:src="@drawable/sos_button" />

        <com.yp2012g4.blindroid.customUI.TalkingImageButton
            android:id="@+id/time_button"
            android:layout_width="0dip"
            android:layout_height="111dip"
            android:layout_weight="1"
            android:background="@color/BLACK"
            android:contentDescription="@string/time_button"
            android:scaleType="fitCenter"
            android:src="@drawable/time_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.yp2012g4.blindroid.customUI.TalkingImageButton
            android:id="@+id/where_am_i_button"
            style="android:ButtonStyle"
            android:layout_width="0dip"
            android:layout_height="111dip"
            android:layout_weight="1"
            android:background="@color/BLACK"
            android:contentDescription="@string/where_am_i_button"
            android:scaleType="fitCenter"
            android:src="@drawable/compass_button" />

        <com.yp2012g4.blindroid.customUI.TalkingImageButton
            android:id="@+id/phone_status_button"
            android:layout_width="0dip"
            android:layout_height="111dip"
            android:layout_weight="1"
            android:background="@color/BLACK"
            android:contentDescription="@string/phone_status_button"
            android:scaleType="fitCenter"
            android:src="@drawable/battery_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.yp2012g4.blindroid.customUI.TalkingImageButton
            android:id="@+id/signal_button"
            android:layout_width="0dip"
            android:layout_height="111dip"
            android:layout_weight="1"
            android:background="@color/BLACK"
            android:contentDescription="@string/signal_button"
            android:scaleType="fitCenter"
            android:src="@drawable/signal_button" />

        <com.yp2012g4.blindroid.customUI.TalkingImageButton
            android:id="@+id/alarm_clock_button"
            android:layout_width="0dip"
            android:layout_height="111dip"
            android:layout_weight="1"
            android:background="@color/BLACK"
            android:contentDescription="@string/alarm_clock_button"
            android:scaleType="fitCenter"
            android:src="@drawable/alarm_clock_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.yp2012g4.blindroid.customUI.TalkingImageButton
            android:id="@+id/quick_dial_button"
            android:layout_width="0dip"
            android:layout_height="111dip"
            android:layout_weight="1"
            android:background="@color/BLACK"
            android:contentDescription="@string/quick_dial_button"
            android:scaleType="fitCenter"
            android:src="@drawable/quick_dial_button" />

        <com.yp2012g4.blindroid.customUI.TalkingImageButton
            android:id="@+id/quick_sms_button"
            android:layout_width="0dip"
            android:layout_height="111dip"
            android:layout_weight="1"
            android:background="@color/BLACK"
            android:contentDescription="@string/quick_sms_button"
            android:scaleType="fitCenter"
            android:src="@drawable/quick_sms_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.yp2012g4.blindroid.customUI.TalkingImageButton
            android:id="@+id/back_button"
            android:layout_width="0dip"
            android:layout_height="50dip"
            android:layout_weight="1"
            android:background="@color/BLACK"
            android:contentDescription="@string/back_button"
            android:scaleType="fitStart"
            android:src="@drawable/back_button" />

        <com.yp2012g4.blindroid.customUI.TalkingImageButton
            android:id="@+id/settings_button"
            android:layout_width="0dip"
            android:layout_height="50dip"
            android:layout_weight="1"
            android:background="@color/BLACK"
            android:contentDescription="@string/settings_button"
            android:scaleType="fitCenter"
            android:src="@drawable/settings_button" />

        <com.yp2012g4.blindroid.customUI.TalkingImageButton
            android:id="@+id/next_button"
            android:layout_width="0dip"
            android:layout_height="50dip"
            android:layout_weight="1"
            android:background="@color/BLACK"
            android:contentDescription="@string/next_button"
            android:scaleType="fitEnd"
            android:src="@drawable/next_button" />
    </LinearLayout>

</LinearLayout>
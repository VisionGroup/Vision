<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/DialScreen"
    style="?backgroundColor"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:contentDescription="Dial Screen"
    android:orientation="vertical" xmlns:app="http://schemas.android.com/apk/res/com.yp2012g4.blindroid">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.yp2012g4.blindroid.customUI.TalkingButton
            android:id="@+id/number"
            style="?textAppearance"
            android:layout_width="0dip"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="left"
            android:paddingBottom="20dp"
            android:paddingLeft="40dp"
            android:paddingTop="20dp"
            android:textStyle="bold" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/DialScreenNumbers" >
        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.yp2012g4.blindroid.customUI.TalkingButton
            android:id="@+id/digit1"
            android:layout_width="0dip"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:text="@string/digit1"
            android:textSize="56sp"
            android:textStyle="bold"
            style="?textAppearance"  />
        
         <com.yp2012g4.blindroid.customUI.TalkingButton
            android:id="@+id/digit2"
            android:layout_width="0dip"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:textSize="56sp"
            android:textStyle="bold"
            android:text="@string/digit2"
            style="?textAppearance"  />
         
         <com.yp2012g4.blindroid.customUI.TalkingButton
            android:id="@+id/digit3"
            android:layout_width="0dip"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:text="@string/digit3"
            android:textSize="56sp"
            android:textStyle="bold"
            style="?textAppearance"  />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.yp2012g4.blindroid.customUI.TalkingButton
            android:id="@+id/digit4"
            android:layout_width="0dip"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:text="@string/digit4"
            android:textSize="56sp"
            android:textStyle="bold"
            style="?textAppearance"  />
        
         <com.yp2012g4.blindroid.customUI.TalkingButton
            android:id="@+id/digit5"
            android:layout_width="0dip"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:textSize="56sp"
            android:textStyle="bold"
            android:text="@string/digit5"
            style="?textAppearance"  />
         
         <com.yp2012g4.blindroid.customUI.TalkingButton
            android:id="@+id/digit6"
            android:layout_width="0dip"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:text="@string/digit6"
            android:textSize="56sp"
            android:textStyle="bold"
            style="?textAppearance"  />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.yp2012g4.blindroid.customUI.TalkingButton
            android:id="@+id/digit7"
            style="?textAppearance"
            android:layout_width="0dip"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:text="@string/digit7"
            android:textSize="56sp"
            android:textStyle="bold" />
        
         <com.yp2012g4.blindroid.customUI.TalkingButton
            android:id="@+id/digit8"
            android:layout_width="0dip"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:textSize="56sp"
            android:textStyle="bold"
            android:text="@string/digit8"
            style="?textAppearance"  />
         
         <com.yp2012g4.blindroid.customUI.TalkingButton
            android:id="@+id/digit9"
            android:layout_width="0dip"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:text="@string/digit9"
            android:textSize="56sp"
            android:textStyle="bold"
            style="?textAppearance"  />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.yp2012g4.blindroid.customUI.TalkingButton
            android:id="@+id/asterisk"
            android:layout_width="0dip"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:text="@string/asterisk"
            android:textSize="56sp"
            android:textStyle="bold"
            style="?textAppearance"  />
        
         <com.yp2012g4.blindroid.customUI.TalkingButton
            android:id="@+id/digit0"
            android:layout_width="0dip"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:textSize="56sp"
            android:textStyle="bold"
            android:text="@string/digit0"
            style="?textAppearance"  />
         
         <com.yp2012g4.blindroid.customUI.TalkingButton
            android:id="@+id/numberSign"
            android:layout_width="0dip"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:text="@string/number_sign"
            android:textSize="56sp"
            android:textStyle="bold"
            style="?textAppearance"  />
    </LinearLayout>
     </LinearLayout>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.yp2012g4.blindroid.customUI.TalkingImageButton
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/button_delete"
            android:layout_width="0dip"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/delete_button"
            android:contentDescription="@string/delete_button_read" />
        
         <com.yp2012g4.blindroid.customUI.TalkingButton
             android:id="@+id/Contact_number_8"
             style="?textAppearance"
             android:layout_width="0dip"
             android:layout_height="62dp"
             android:layout_weight="1"
             android:background="@android:color/transparent"
             android:textSize="56sp"
             android:textStyle="bold"
             android:scaleType="fitCenter"
             android:text="@string/OK_button" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom" >
		<include layout="@layout/control_bar_view"/>
    </LinearLayout>

</LinearLayout>
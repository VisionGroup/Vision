<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.yp2012g4.vision"
    android:id="@+id/SOS_textview"
    style="?backgroundColor"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:contentDescription="@string/sos_screen"
    android:orientation="vertical"
    android:weightSum="12"
    tools:context=".DisplayMessageActivity" >

    <com.yp2012g4.vision.customUI.TalkingButton
        android:id="@+id/SOS_phone_number"
        style="?textAppearance"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="2"
        android:background="@android:color/transparent"
        android:scaleType="center"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <com.yp2012g4.vision.customUI.TalkingImageButton
        android:id="@+id/Send_SOS_Message"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="8"
        android:background="@android:color/transparent"
        android:scaleType="center"
        android:src="@drawable/sos_pic"
        app:readText="@string/send_SOS_message" />

    <com.yp2012g4.vision.customUI.TalkingButton
        android:id="@+id/SOS_Change_contact"
        style="?textAppearance"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="2"
        android:background="@android:color/transparent"
        android:scaleType="center"
        android:text="@string/change_contact_number"
        app:readText="@string/change_contact_number"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <include layout="@layout/control_bar_view" />
    </LinearLayout>

</LinearLayout>
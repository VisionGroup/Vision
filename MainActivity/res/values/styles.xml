<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <color name="WHITE">#FFFFFF</color>
    <color name="BLACK">#000000</color>
    <color name="RED">#FF0000</color>
    <color name="GREEN">#04B431</color>
    <color name="BLUE">#2E9AFE</color>

   <style name="small_text">
      <item name="android:textSize">20sp</item>
   </style>
   <style name="normal_text">
      <item name="android:textSize">28sp</item>
   </style>
   <style name="large_text">
      <item name="android:textSize">36sp</item>
   </style>

  <!-- Base application theme is the default theme. -->
  <style name="Theme" parent="android:Theme">
  </style>

  <style name="Theme.Small">
     <item name="textSize">@style/small_text</item>
  </style>
  
    <style name="Theme.Normal">
     <item name="textSize">@style/normal_text</item>
  </style>
  

  <style name="Theme.Large">
      <item name="textSize">@style/large_text</item>
  </style>
 </resources>
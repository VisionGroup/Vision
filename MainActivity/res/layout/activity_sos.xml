<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/SOS_textview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    style="?backgroundColor"
    tools:context=".DisplayMessageActivity" >

  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
    <com.yp2012g4.blindroid.customUI.TalkingImageButton
        android:id="@+id/Send_SOS_Message"
        android:layout_width="0dip"
        android:layout_height="460dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:contentDescription="@string/send_SOS_message"
        android:scaleType="center"
        android:src="@drawable/sos_pic" />

	</LinearLayout>
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom" >
		<include layout="@layout/control_bar_view"/>
  
    </LinearLayout>

</LinearLayout>
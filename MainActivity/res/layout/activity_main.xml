<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MainActivityView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/button1"
            android:layout_width="0dip"
            android:layout_height="111dip"
            android:layout_weight="1"
            android:background="@drawable/BLACK"
            android:contentDescription="@string/button1"
            android:scaleType="fitCenter"
            android:src="@drawable/sos_button" />
  
        <ImageButton
            android:id="@+id/button2"
            android:layout_width="0dip"
            android:layout_height="111dip"
            android:layout_weight="1"
            android:background="@drawable/BLACK"
            android:contentDescription="@string/button2"
            android:scaleType="fitCenter"
            android:src="@drawable/time_button" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/button3"
            style="android:ButtonStyle"
            android:layout_width="0dip"
            android:layout_height="111dip"
            android:layout_weight="1"
            android:background="@drawable/BLACK"
            android:contentDescription="@string/button3"
            android:scaleType="fitCenter"
            android:src="@drawable/compass_button" />

        <ImageButton
            android:id="@+id/button4"
            android:layout_width="0dip"
            android:layout_height="111dip"
            android:layout_weight="1"
            android:background="@drawable/BLACK"
            android:contentDescription="@string/button4"
            android:scaleType="fitCenter"
            android:src="@drawable/battery_button" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/button5"
            android:layout_width="0dip"
            android:layout_height="111dip"
            android:layout_weight="1"
            android:background="@drawable/BLACK"
            android:contentDescription="@string/button5"
            android:scaleType="fitCenter"
            android:src="@drawable/signal_button" />

        <ImageButton
            android:id="@+id/button6"
            android:layout_width="0dip"
            android:layout_height="111dip"
            android:layout_weight="1"
            android:background="@drawable/BLACK"
            android:contentDescription="@string/button6"
            android:scaleType="fitCenter"
            android:src="@drawable/alarm_clock_button" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"  >

        <ImageButton
            android:id="@+id/button7"
            android:layout_width="0dip"
            android:layout_height="111dip"
            android:layout_weight="1"
            android:background="@drawable/BLACK"
            android:contentDescription="@string/button7"
            android:scaleType="fitCenter"
            android:src="@drawable/quick_dial_button" />

        <ImageButton
            android:id="@+id/button8"
            android:layout_width="0dip"
            android:layout_height="111dip"
            android:layout_weight="1"
            android:background="@drawable/BLACK"
            android:contentDescription="@string/button8"
            android:scaleType="fitCenter"
            android:src="@drawable/quick_sms_button" />

    </LinearLayout>
    
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"  >

        <ImageButton
            android:id="@+id/buttonBack"
            android:layout_width="0dip"
            android:layout_height="50dip"
            android:layout_weight="1"
            android:background="@drawable/BLACK"
            android:contentDescription="@string/buttonBack"
            android:scaleType="fitStart"
            android:src="@drawable/back_button" />
        
        <ImageButton
            android:id="@+id/buttonSettings"
            android:layout_width="0dip"
            android:layout_height="50dip"
            android:layout_weight="1"
            android:background="@drawable/BLACK"
            android:contentDescription="@string/buttonSettings"
            android:scaleType="fitCenter"
            android:src="@drawable/settings_button" />

        <ImageButton
            android:id="@+id/buttonNext"
            android:layout_width="0dip"
            android:layout_height="50dip"
            android:layout_weight="1"
            android:background="@drawable/BLACK"
            android:contentDescription="@string/buttonNext"
            android:scaleType="fitEnd"
            android:src="@drawable/next_button" />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.yp2012g4.vision"
    android:id="@+id/ColorSettingsActivity"
    style="?backgroundColor"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:contentDescription="@string/color_settings_screen"
    android:orientation="vertical" >

    <com.yp2012g4.vision.customUI.TalkingButton
        android:id="@+id/WhiteBlack"
        style="?textAppearance"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/BLACK"
        android:text="@string/WhiteBlack"
        android:textColor="@color/WHITE"
        app:prefsValue="WHITE-BLACK"
        app:readText="@string/WhiteBlack" />

    <com.yp2012g4.vision.customUI.TalkingButton
        android:id="@+id/WhiteRed"
        style="?textAppearance"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/RED"
        android:text="@string/WhiteRed"
        android:textColor="@color/WHITE"
        app:prefsValue="WHITE-RED"
        app:readText="@string/WhiteRed" />

    <com.yp2012g4.vision.customUI.TalkingButton
        android:id="@+id/RedBlack"
        style="?textAppearance"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/BLACK"
        android:text="@string/RedBlack"
        android:textColor="@color/RED"
        app:prefsValue="RED-BLACK"
        app:readText="@string/RedBlack" />

    <com.yp2012g4.vision.customUI.TalkingButton
        android:id="@+id/WhiteGreen"
        style="?textAppearance"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/GREEN"
        android:text="@string/WhiteGreen"
        android:textColor="@color/WHITE"
        app:prefsValue="WHITE-GREEN"
        app:readText="@string/WhiteGreen" />

    <com.yp2012g4.vision.customUI.TalkingButton
        android:id="@+id/GreenBlack"
        style="?textAppearance"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/BLACK"
        android:text="@string/GreenBlack"
        android:textColor="@color/GREEN"
        app:prefsValue="GREEN-BLACK"
        app:readText="@string/GreenBlack" />

    <com.yp2012g4.vision.customUI.TalkingButton
        android:id="@+id/WhiteBlue"
        style="?textAppearance"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/BLUE"
        android:text="@string/WhiteBlue"
        android:textColor="@color/WHITE"
        app:prefsValue="WHITE-BLUE"
        app:readText="@string/WhiteBlue" />

    <com.yp2012g4.vision.customUI.TalkingButton
        android:id="@+id/BlueBlack"
        style="?textAppearance"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/BLACK"
        android:text="@string/BlueBlack"
        android:textColor="@color/BLUE"
        app:prefsValue="BLUE-BLACK"
        app:readText="@string/BlueBlack" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <include layout="@layout/control_bar_view" />
    </LinearLayout>

</LinearLayout>
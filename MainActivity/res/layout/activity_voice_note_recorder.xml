<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/VoiceNoteRecorderActivity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    xmlns:app="http://schemas.android.com/apk/res/com.yp2012g4.vision">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.yp2012g4.vision.customUI.TalkingImageButton
            android:id="@+id/button_prevNote"
            android:layout_width="0dip"
            android:layout_height="111dip"
            android:layout_weight="1"
            android:background="@color/BLACK"
            android:scaleType="fitCenter"
            android:src="@drawable/up"
            app:ReadText="@string/voicenoterecorder_button_up" />

        <com.yp2012g4.vision.customUI.TalkingImageButton
            android:id="@+id/button_recordStop"
            android:layout_width="0dip"
            android:layout_height="111dip"
            android:layout_weight="1"
            android:background="@color/BLACK"
            android:scaleType="fitCenter"
            android:src="@drawable/record"
            app:ReadText="@string/voicenoterecorder_button_record" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NoteNumber"
            android:textSize="@dimen/NormalTextSize"
            style="?textAppearance" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.yp2012g4.vision.customUI.TalkingImageButton
            android:id="@+id/button_nextNote"
            android:layout_width="0dip"
            android:layout_height="111dip"
            android:layout_weight="1"
            android:background="@color/BLACK"
            android:scaleType="fitCenter"
            android:src="@drawable/down"
            app:ReadText="@string/voicenoterecorder_button_down" />

        <com.yp2012g4.vision.customUI.TalkingImageButton
            android:id="@+id/button_playStop"
            android:layout_width="0dip"
            android:layout_height="111dip"
            android:layout_weight="1"
            android:background="@color/BLACK"
            android:scaleType="fitCenter"
            android:src="@drawable/play"
            app:ReadText="@string/voicenoterecorder_button_play" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <include layout="@layout/control_bar_view" />
    </LinearLayout>

</LinearLayout>
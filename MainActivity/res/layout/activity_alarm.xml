<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AlarmActivity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".AlarmActivity"
    style="?backgroundColor" >

   <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >
        <include layout="@layout/control_bar_view" />

    </LinearLayout>

   <com.yp2012g4.blindroid.customUI.TalkingButton
       android:id="@+id/statusButton"
       android:layout_width="match_parent"
       android:layout_height="95dp"
       android:layout_alignParentLeft="true"
       android:layout_alignParentTop="true"
       android:background="@android:color/transparent"
       android:scaleType="fitCenter"
       android:text="@string/alarmStatus"
       style="?textAppearance" />

   <com.yp2012g4.blindroid.customUI.TalkingButton
       android:id="@+id/setButton"
       android:layout_width="match_parent"
       android:layout_height="95dp"
       android:layout_alignParentLeft="true"
       android:layout_below="@+id/statusButton"
       android:background="@android:color/transparent"
       android:scaleType="fitCenter"
       android:text="@string/setAlarmButton"
       style="?textAppearance" />

   <com.yp2012g4.blindroid.customUI.TalkingButton
       android:id="@+id/startalarm"
       style="?textAppearance"
       android:layout_width="match_parent"
       android:layout_height="95dp"
       android:layout_alignParentLeft="true"
       android:layout_below="@+id/setButton"
       android:background="@android:color/transparent"
       android:scaleType="fitCenter"
       android:text="@string/startAlarm" />

   <com.yp2012g4.blindroid.customUI.TalkingButton
       android:id="@+id/cancelalarm"
       style="?textAppearance"
       android:layout_width="match_parent"
       android:layout_height="95dp"
       android:layout_above="@+id/LinearLayout1"
       android:layout_alignParentLeft="true"
       android:layout_below="@+id/startalarm"
       android:background="@android:color/transparent"
       android:scaleType="fitCenter"
       android:text="@string/stopAlarm" />

</RelativeLayout>
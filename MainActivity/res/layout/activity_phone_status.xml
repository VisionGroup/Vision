<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/phoneStatusActivity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    style="?backgroundColor"
    tools:context=".PhoneStatus" xmlns:app="http://schemas.android.com/apk/res/com.yp2012g4.blindroid"
    android:contentDescription="@string/phoneStatus_whereami">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.yp2012g4.blindroid.customUI.TalkingImageButton
            android:id="@+id/button_getBatteryStatus"
            android:layout_width="0dip"
            android:layout_height="105dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
			android:contentDescription="@string/phoneStatus_button_getBatteryStatus_read"
            android:scaleType="fitCenter"
            android:src="@drawable/battery_button"
            app:ReadText="@string/phoneStatus_button_getBatteryStatus_read" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.yp2012g4.blindroid.customUI.TalkingImageButton
            android:id="@+id/button_getReceptionStatus"
            style="android:ButtonStyle"
            android:layout_width="0dip"
            android:layout_height="105dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/phoneStatus_button_getReceptionStatus_read"
            android:scaleType="fitCenter"
            app:ReadText="@string/phoneStatus_button_getReceptionStatus_read"
            android:src="@drawable/signal_button" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.yp2012g4.blindroid.customUI.TalkingImageButton
            android:id="@+id/button_getMissedCalls"
            style="android:ButtonStyle"
            android:layout_width="0dip"
            android:layout_height="105dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/phoneStatus_button_getMissedCalls_read"
            android:scaleType="fitCenter"
            app:ReadText="@string/phoneStatus_button_getMissedCalls_read"
            android:src="@drawable/quick_dial_button" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.yp2012g4.blindroid.customUI.TalkingImageButton
            android:id="@+id/button_getUnreadSMS"
            style="android:ButtonStyle"
            android:layout_width="0dip"
            android:layout_height="105dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/phoneStatus_button_getUnreadSMS_read"
            android:scaleType="fitCenter"
            app:ReadText="@string/phoneStatus_button_getUnreadSMS_read"
            android:src="@drawable/read_sms_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom" >
		<include layout="@layout/control_bar_view"/>
    </LinearLayout>

</LinearLayout>
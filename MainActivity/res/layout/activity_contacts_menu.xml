<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res/com.yp2012g4.blindroid"
    android:id="@+id/ContactsMenuActivity"
    style="?backgroundColor"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:contentDescription="@string/title_activity_contacts_menu"
    android:orientation="vertical"
   	tools:context=".ContactsMenuActivity" >
	
     <com.yp2012g4.blindroid.customUI.TalkingImageButton
        android:id="@+id/quickDialButton"
        style="?textAppearance"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:contentDescription="@string/quick_dial_button"
        android:scaleType="fitCenter"
        android:text="@string/quick_dial_button"
        android:src="@drawable/star"
        custom:ReadText="@string/quick_dial_button" />
     
    <com.yp2012g4.blindroid.customUI.TalkingImageButton
        android:id="@+id/contactsListButton"
        style="?textAppearance"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:contentDescription="@string/contactsList"
        android:scaleType="fitCenter"
        android:text="@string/contactsList"
         android:src="@drawable/contacts"
        custom:ReadText="@string/contactsList" />

    <com.yp2012g4.blindroid.customUI.TalkingImageButton
        android:id="@+id/dialerButton"
        style="?textAppearance"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
         android:contentDescription="@string/Dialer"
        android:scaleType="fitCenter"
        android:text="@string/Dialer"
        android:src="@drawable/dialer"
        custom:ReadText="@string/Dialer" />

    

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <include layout="@layout/control_bar_view" />
    </LinearLayout>

</LinearLayout>
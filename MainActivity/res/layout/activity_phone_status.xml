<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/phoneStatusActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneStatus" >

    <com.yp2012g4.blindroid.customUI.TalkingButton
        android:id="@+id/button_getBatteryStatus"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:drawableTop="@drawable/battery_button"
        android:gravity="center_vertical"
        android:text="@string/phoneStatus_button_getBatteryStatus" />

    <com.yp2012g4.blindroid.customUI.TalkingButton
        android:id="@+id/button_getReceptionStatus"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button_getBatteryStatus"
        android:layout_marginTop="20dp"
        android:drawableTop="@drawable/signal_button"
        android:text="@string/phoneStatus_button_getReceptionStatus" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <com.yp2012g4.blindroid.customUI.TalkingImageButton
            android:id="@+id/back_button"
            android:layout_width="0dip"
            android:layout_height="50dip"
            android:layout_weight="1"
            android:background="@color/BLACK"
            android:contentDescription="@string/back_button"
            android:scaleType="fitStart"
            android:src="@drawable/back_button" />

        <com.yp2012g4.blindroid.customUI.TalkingImageButton
            android:id="@+id/settings_button"
            android:layout_width="0dip"
            android:layout_height="50dip"
            android:layout_weight="1"
            android:background="@color/BLACK"
            android:contentDescription="@string/settings_button"
            android:scaleType="fitCenter"
            android:src="@drawable/settings_button" />

        <com.yp2012g4.blindroid.customUI.TalkingImageButton
            android:id="@+id/next_button"
            android:layout_width="0dip"
            android:layout_height="50dip"
            android:layout_weight="1"
            android:background="@color/BLACK"
            android:contentDescription="@string/next_button"
            android:scaleType="fitEnd"
            android:src="@drawable/next_button" />
    </LinearLayout>

</RelativeLayout>
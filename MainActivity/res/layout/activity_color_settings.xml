<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ColorSettingsActivity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    style="?backgroundColor" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.yp2012g4.blindroid.customUI.TalkingButton
            android:id="@+id/WhiteBlack"
            android:layout_width="0dip"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/BLACK"
            android:text="@string/WhiteBlack"
            android:textColor="@color/WHITE"
            style="?textAppearance" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.yp2012g4.blindroid.customUI.TalkingButton
            android:id="@+id/WhiteRed"
            android:layout_width="0dip"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/RED"
            android:text="@string/WhiteRed"
            android:textColor="@color/WHITE"
            style="?textAppearance" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.yp2012g4.blindroid.customUI.TalkingButton
            android:id="@+id/RedBlack"
            android:layout_width="0dip"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/BLACK"
            android:text="@string/RedBlack"
            android:textColor="@color/RED"
            style="?textAppearance" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.yp2012g4.blindroid.customUI.TalkingButton
            android:id="@+id/WhiteGreen"
            android:layout_width="0dip"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/GREEN"
            android:text="@string/WhiteGreen"
            android:textColor="@color/WHITE"
            style="?textAppearance" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.yp2012g4.blindroid.customUI.TalkingButton
            android:id="@+id/GreenBlack"
            android:layout_width="0dip"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/BLACK"
            android:text="@string/GreenBlack"
            android:textColor="@color/GREEN"
            style="?textAppearance" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.yp2012g4.blindroid.customUI.TalkingButton
            android:id="@+id/WhiteBlue"
            android:layout_width="0dip"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/BLUE"
            android:text="@string/WhiteBlue"
            android:textColor="@color/WHITE"
            style="?textAppearance" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.yp2012g4.blindroid.customUI.TalkingButton
            android:id="@+id/BlueBlack"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/BLACK"
            android:text="@string/BlueBlack"
            android:textColor="@color/BLUE"
            style="?textAppearance" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom" >
		<include layout="@layout/control_bar_view"/>
    </LinearLayout>

</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res/com.yp2012g4.vision"
    android:id="@+id/set_alarm_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:contentDescription="@string/title_activity_set_clock"
    android:orientation="vertical"
    tools:context=".SetClockActivity" >

    <com.yp2012g4.vision.customUI.TalkingButton
        android:id="@+id/textView1"
        style="?textAppearance"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:text="@string/setHour"
        android:textSize="30sp"
        />

    <com.yp2012g4.vision.customUI.TalkingButton
        android:id="@+id/number"
        style="?textAppearance"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginTop="16dp"
        android:layout_weight="4"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:text="@string/noAlarm"
        android:textSize="50sp"
        custom:readText="@string/set_time_button" />

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <include layout="@layout/control_bar_view" />
    </LinearLayout>

</LinearLayout>